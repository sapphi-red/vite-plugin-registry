{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly", "group:allNonMajor"],
  "labels": ["dependencies"],
  "ignorePaths": ["**/__tests__/**"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": ["action"],
      "pinDigests": true,
      "matchPackageNames": ["!actions/{/,}**", "!github/{/,}**"],
    },
  ],
  "ignoreDeps": [
    // manually bumping
    "node",
  ],
}
